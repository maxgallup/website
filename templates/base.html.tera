<!DOCTYPE html>
<html>
  <head>
    
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow, noimageindex, nosnippet, nocache, noarchive">

    {% include "style" %}


    <script>
      window.onload = () => {
        listenNavBar();
        document.querySelectorAll("pre").forEach(item => {
          item.addEventListener("click", event => {
              copyText(event);
          })
        })
        
      }
      function listenNavBar() {
        burger.addEventListener("click", () => {
          nav.classList.toggle("active");
          burger.classList.toggle("active");
          if(burger.classList.contains("active")){
              burger.textContent = "X";
          } else {
              burger.textContent = "‚ò∞";
          }
        });
      }

      

      function copyText(event) {
        parent = event.target
        navigator.clipboard.writeText(parent.textContent);
        var newElement = document.createElement("span");
        var text = document.createTextNode("Copied!");
        newElement.appendChild(text);
        newElement.setAttribute("class", "copied");
        parent.prepend(newElement);

        setTimeout(function() {
          parent.removeChild(parent.firstChild);
        }, 2500);
        
      }
    </script>

    <title>{{ title }}</title>


  </head>

  <body>
    <button id="burger" class="navitem" href="#">‚ò∞</button>
    <nav id="nav">
        <ul id="navlist" class="navitem">
            <li class="navitem" ><a href="/" id="home">home</a></li>
            <li class="navitem"><a href="/cv" target="_blank">my CV</a></li>
            <li class="navitem" ><a href="/recipes" id="recipes">recipes</a></li>
            <li class="navitem" ><a href="/articles" id="articles">articles</a></li>
            <li class="navitem" ><a href="/projects" id="projects">projects</a></li>
            <li class="navitem" ><a href="/isitvegan" id="isitvegan">plants?</a></li>
            <li class="navitem"><a href="https://github.com/maxgallup/" target="_blank">github</a></li>
        </ul>
    </nav>


    <main>
      <div class="card">
        {% block content %}{% endblock content %}
      </div>
    </main>






  </body>

  <footer>
        <div>
            <span><i>No cookies no bullshit</i> ü§Æüç™ </span>
        </div>
    </footer>

</html>
